generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      Role      @default(USER)
  attendances Attendance[]
}

model Attendance {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime
  status    AttendanceStatus @default(ABSENT)
  entryTime DateTime?

  @@unique([userId, date], name: "UserDailyAttendance") // Correct way to define unique constraint on multiple fields // Optional, only if status is PRESENT
}

enum AttendanceStatus {
  PRESENT
  ABSENT
}
